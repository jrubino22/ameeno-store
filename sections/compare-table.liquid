        "options": [
          {
            "value": "square-check",
            "label": "checked column 5"
          },
          {
            "value": "square",
            "label": "unchecked"
          }
        ],
        "default": "square",
        "label": "checkbox"
      },
      {
        "type": "text",
        "id": "data_text5",
        "label": "text column 5 (example: 'Rare')"
      }
    ]
  }
],  
  "presets": [ 
    { 
      "name": "Comparative Table", 
      "category": "video" 
    } 
  ] 
} 
{% endschema %} 