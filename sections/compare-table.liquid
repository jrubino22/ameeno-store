{% style %}
.table-section-container {
    text-align: center;
    background-color: white;
    padding: 5% 0;
}
.table-title {
    font-size: 3.8rem;
}
.compare-table-container {
    font-size: 2rem;
    text-align: center;
    margin: 3%;
    overflow-y: hidden;
    overflow-x: auto;
}
.ctable {
    width: 91%;

}
.ct-head {
    border-bottom: 1px solid;
}
.heading1 {
    width: 35%
}
.heading2 {
    width: 14%
}
.heading3 {
    width: 14%
}
.heading4 {
    width: 14%
}
.heading5 {
    width: 14%
}
.ct-row {
    border-bottom: 1px solid;
}
.td-cell {
    text-align: center;
}

{% endstyle %}

<div class="table-section-container">
    <h2 class="table-title">{{section.settings.table_title}}</h2>
    <div class="compare-table-container">
        <table ctable>
            <thead class="ct-head">
                <tr class="heading-row">
                    <th class="heading1">{{section.settings.head1}}</th>
                    <th class="heading2">{{section.settings.head2}}</th>
                    <th class="heading3">{{section.settings.head3}}</th>
                    <th class="heading4">{{section.settings.head4}}</th>
                    <th class="heading5">{{section.settings.head5}}</th>
                </tr>
            </thead>
            <tbody  class="ct-body">
                {% for block in section.blocks %}            
                    <tr class="ct-row">
                        <td style="word-wrap: break-word">{{block.settings.row_text}}</td>
                        {% if block.settings.icon_box2 %}
                            <td class="td-cell"><i class="fa-regular fa-{{block.settings.icon2}} fa-2x me-auto"></i></td>
                        {% else %}
                            <td class="td-cell">{{block.settings.data_text2}}</td>
                        {% endif %}

                        {% if block.settings.icon_box3 %}
                            <td class="td-cell"><i class="fa-regular fa-{{block.settings.icon3}} fa-2x me-auto"></i></td>
                        {% else %}
                            <td class="td-cell">{{block.settings.data_text3}}</td>
                        {% endif %}

                        {% if block.settings.icon_box4 %}
                            <td class="td-cell"><i class="fa-regular fa-{{block.settings.icon4}} fa-2x me-auto"></i></td>
                        {% else %}
                            <td class="td-cell">{{block.settings.data_text4}}</td>
                        {% endif %}

                        {% if block.settings.icon_box5 %}
                            <td class="td-cell"><i class="fa-regular fa-{{block.settings.icon5}} fa-2x me-auto"></i></td>
                        {% else %}
                            <td class="td-cell">{{block.settings.data_text5}}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% schema %} 
{ 
  "name": "Comparative Table", 
  "settings": [ 
    { 
      "type": "header", 
      "content": "Comparative Table" 
    }, 
    {
        "type": "text",
        "id": "table_title",
        "label":"Table Title"
    },
    { 
      "type": "text", 
      "id": "head1", 
      "label": "table header 1" 
    },
    { 
      "type": "text", 
      "id": "head2", 
      "label": "table header 2" 
    },
    { 
        "type": "text", 
        "id": "head3", 
        "label": "table header 3" 
    },
    { 
        "type": "text", 
        "id": "head4", 
        "label": "table header 4" 
    },
    { 
        "type": "text", 
        "id": "head5", 
        "label": "table header 5" 
    }
  ], 
  "blocks": [
  {
    "type": "column",
    "name": "Row Blocks",
    "settings": [
      {
        "type": "richtext",
        "id": "row_text",
        "default": "<p>Row header goes right here in this spot</p>",
        "label": "Row Header"
      },
      {
        "type": "checkbox",
        "id": "icon_box2",
        "default": true,
        "label": "Use empty box or checked Icon column 2 (leave empty for text)"
      },
      {
        "type": "select",
        "id": "icon2",
        "options": [
          {
            "value": "square-check",
            "label": "checked"
          },
          {
            "value": "square",
            "label": "unchecked"
          }
        ],
        "default": "square",
        "label": "checkbox column 2"
      },
      {
        "type": "text",
        "id": "data_text2",
        "label": "text column 2 (example: 'Rare')"
      },
      {
        "type": "checkbox",
        "id": "icon_box3",
        "default": true,
        "label": "Use empty box or checked Icon column 3(leave empty for text)"
      },
      {
        "type": "select",
        "id": "icon3",
        "options": [
          {
            "value": "square-check",
            "label": "checked"
          },
          {
            "value": "square",
            "label": "unchecked"
          }
        ],
        "default": "square",
        "label": "checkbox column 3"
      },
      {
        "type": "text",
        "id": "data_text3",
        "label": "text column 3 (example: 'Rare')"
      },
      {
        "type": "checkbox",
        "id": "icon_box4",
        "default": true,
        "label": "Use empty box or checked Icon column 4 (leave empty for text)"
      },
      {
        "type": "select",
        "id": "icon4",
        "options": [
          {
            "value": "square-check",
            "label": "checked"
          },
          {
            "value": "square",
            "label": "unchecked"
          }
        ],
        "default": "square",
        "label": "checkbox column 4"
      },
      {
        "type": "text",
        "id": "data_text4",
        "label": "text column 4 (example: 'Rare')"
      },
      {
        "type": "checkbox",
        "id": "icon_box5",
        "default": true,
        "label": "Use empty box or checked Icon column 5 (leave empty for text)"
      },
      {
        "type": "select",
        "id": "icon5",
        "options": [
          {
            "value": "square-check",
            "label": "checked column 5"
          },
          {
            "value": "square",
            "label": "unchecked"
          }
        ],
        "default": "square",
        "label": "checkbox"
      },
      {
        "type": "text",
        "id": "data_text5",
        "label": "text column 5 (example: 'Rare')"
      }
    ]
  }
],  
  "presets": [ 
    { 
      "name": "Comparative Table", 
      "category": "video" 
    } 
  ] 
} 
{% endschema %} 