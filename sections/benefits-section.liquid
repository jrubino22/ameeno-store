{% style %}
  .benefits_container h2 {
    font-size: 1.3rem
  }
  .benefits_container h3 {
    font-size: 1.2rem
  }
  .benefits_container i {
    margin-bottom: 1.5rem
  }
  .benefits_container p {
    font-size: 1.3rem
  }

{% endstyle %}
<div class="container col-container ms-5 benefits_container" style="min-width: 100% " >
  <div class="row align-items-start ms-5 mb-5 mt-5">
    <div class="col-12 me-auto">
      <h2 class="section--head">{{section.settings.main_title}}</h2>
    </div>
  </div>
  <div class="row align-items-start ms-5">
    <div class="col col-12 col-md-3 boot-caption">
      <h3 style="margin-bottom: 2%;">{{section.settings.secondary_title}}</h3>
      <p>{{section.settings.main_paragraph}}</p>     
    </div>      
    <div class="col col-12 col-md-7">
      <div class="row">
      {% for block in section.blocks %}
        <div class="col-xs-12 col-md-3 me-md-1">
          <i class="fa-solid fa-{{block.settings.icon}} fa-3x me-auto"></i>
          <h4>{{block.settings.block_title}}</h4>
          <p>{{block.settings.block_paragraph}}</p>        
        </div>
      {% endfor %}    
      </div>
    </div>
  </div>         
</div>   

{% schema %} 
{ 
  "name": "Benefits Section", 
  "settings": [ 
    { 
      "type": "header", 
      "content": "Benefits Section" 
    }, 
    { 
      "type": "text", 
      "id": "main_title", 
      "label": "Main Title" 
    },
    { 
      "type": "text", 
      "id": "secondary_title", 
      "label": "secondary title" 
    },
    { 
      "type": "richtext", 
      "id": "main_paragraph", 
      "label": "main paragraph" 
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "center image"
    }
  ], 
  "blocks": [
  {
    "type": "column",
    "name": "Icon Blocks",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "t:sections.multicolumn.blocks.column.settings.image.label"
      },
      {
        "type": "text",
        "id": "block_title",
        "default": "Block",
        "label": "Block Title"
      },
      {
        "type": "richtext",
        "id": "block_paragraph",
        "default": "<p>add text here to better describe the benefit</p>",
        "label": "Block Paragraph"
      },
      {
        "type": "select",
        "id": "icon",
        "options": [
          {
            "value": "pen",
            "label": "pen"
          },
          {
            "value": "info",
            "label": "info"
          },
          {
            "value": "question",
            "label": "question"
          }
        ],
        "default": "pen",
        "label": "pen"
      },
      {
        "type": "text",
        "id": "link_label",
        "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.multicolumn.blocks.column.settings.link.label"
      }
    ]
  }
],  
  "presets": [ 
    { 
      "name": "Benefits section", 
      "category": "video" 
    } 
  ] 
} 
{% endschema %} 