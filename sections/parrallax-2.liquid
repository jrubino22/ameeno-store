
<div class="video-container-bottom">
  <video autoplay muted loop>
      <source src="{{ section.settings.img_product_2 }}" type="video/mp4" />
    </video>
  <div class="caption" >
    <div class="bp-text" >
      <h2 style="font-size: 4rem">{{ section.settings.section_title_2 }}</h2>
      <p>{{ section.settings.section_text_2 }}</p>
    </div>
  </div>
  <div class="container text-center col-container" >
    <div class="row align-items-start">
      {% for block in section.blocks %}
        <div class="col col-12 col-md-3 boot-caption">
          <h3>{{block.settings.title}}</h3>
          <i class="fa-solid fa-{{block.settings.icon}} fa-10x"></i>
          <a class="btn btn-primary" href="{{block.settings.link}}">{{block.settings.link_label}}</a>
        </div>
      {% endfor %}
    </div>         
  </div>   
  </div>
    
  {% schema %} 
  { 
    "name": "Bottom Parallax", 
    "settings": [ 
      { 
        "type": "header", 
        "content": "Bottom Parallax" 
      }, 
      { 
        "type": "text", 
        "id": "img_product_2", 
        "label": "Section video" 
      },
      { 
        "type": "text", 
        "id": "section_title_2", 
        "label": "Section title 1" 
      },
      { 
        "type": "richtext", 
        "id": "section_text_2", 
        "label": "Section content 1" 
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "center image"
      }
    ], 
    "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        },
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "pen",
              "label": "pen"
            },
            {
              "value": "fire",
              "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.icon.options__14.label"
            },
            {
              "value": "washing",
              "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.icon.options__44.label"
            }
          ],
          "default": "pen",
          "label": "pen"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],  
    "presets": [ 
      { 
        "name": "Bottom Parallax", 
        "category": "video" 
      } 
    ] 
  } 
  {% endschema %} 