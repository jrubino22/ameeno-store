
<div class="video-container-bottom">
  <video autoplay muted loop class="bottomVid">
      <source src="{{ section.settings.img_product_2 }}" type="video/mp4" />
    </video>
  <div class="caption" >
    <div class="bp-text" >
      <h2 style="font-size: 4rem">{{ section.settings.section_title_2 }}</h2>
      <p>{{ section.settings.section_text_2 }}</p>
    </div>
  </div>
  <div class="container text-center col-container par-bot-box" >
    <div class="row align-items-start">
      {% for block in section.blocks %}
          <div class="col col-12 col-md-3 boot-caption">
            <a href="{{block.settings.link}}"></a>
            <h3 style="margin-bottom: 2%;">{{block.settings.title}}</h3>
            <i class="fa-solid fa-{{block.settings.icon}} fa-5x"></i>     
            </a>     
          </div>       
      {% endfor %}
    </div>         
  </div>   
  </div>

  <script>
    $(document).ready(function(){
      const viewportWidth = $("body").innerWidth();
      const goalHeight = $(".par-bot-box").height() * 4.5

      if(viewportWidth < 769) {
        console.log(viewportWidth)
        $(".bottomVid").css("min-height", goalHeight)
      }
    })
  </script>
    
  {% schema %} 
  { 
    "name": "Bottom Parallax", 
    "settings": [ 
      { 
        "type": "header", 
        "content": "Bottom Parallax" 
      }, 
      { 
        "type": "text", 
        "id": "img_product_2", 
        "label": "Section video" 
      },
      { 
        "type": "text", 
        "id": "section_title_2", 
        "label": "Section title 1" 
      },
      { 
        "type": "richtext", 
        "id": "section_text_2", 
        "label": "Section content 1" 
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "center image"
      }
    ], 
    "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Column",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        },
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "pen",
              "label": "pen"
            },
            {
              "value": "info",
              "label": "info"
            },
            {
              "value": "question",
              "label": "question"
            }
          ],
          "default": "pen",
          "label": "pen"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],  
    "presets": [ 
      { 
        "name": "Bottom Parallax", 
        "category": "video" 
      } 
    ] 
  } 
  {% endschema %} 